<% if (title) { %>
    <h1><%= title %></h1>
    <form id="addClassificationForm" action="/inv/add-classification" method="post">
      <label for="addClassification">Classification:</label>
      <input type="text" id="addClassification" name="classification_name" required pattern="[A-Za-z]+" placeholder="Alphabetical characters only"> 
      <button type="submit">Add Classification</button>
    </form>
  <% } else { %>
    <h1>Error</h1>
    <p>An error occurred.</p>
    <%= message %>
  <% } %>
  
  
  
