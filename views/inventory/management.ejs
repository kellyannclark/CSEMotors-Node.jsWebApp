<% if (title) { %>
  <!DOCTYPE html>
  <html lang="en">
  <head>
  </head>
  <body>

    <h1><%= title %></h1>
    
    <div class="button-container">
      <a href="/inv/add-classification" class="button">Add New Classification</a>
      <a href="/inv/add-inventory" class="button">Add New Inventory</a>
    </div>
    <style>

      .button-container {
        margin-top: 20px;
        text-align: center; 
      }

      .button {
        display: block; 
        margin: 10px auto;
        padding: 10px 20px;
        text-decoration: none;
        color: #fff;
        background-color: cadetblue;
        border: 1px solid black;
        border-radius: 5px;
        font-size: 18px;
        cursor: pointer;
        margin-left: 20px;
      }

      .button:hover {
        background-color: #0056b3;
        border-color: #0056b3;
      }

      p {
        font-size: 16px;
        color: #555;
      }
    </style>
  </body>
  </html>
<% } else { %>
  <h1>Error</h1>
  <p>An error occurred.</p>
  <%= message %>
<% } %>
