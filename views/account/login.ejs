


<% if (title) { %>
    <h1><%= title %></h1>
<% } else {
    res.redirect('/');
} %>
<%- messages() %>



<form id="loginForm" action="/account/login" method="post">
        <label for="email">Email:</label>
        <input type="email" id="email" name="account_email" required>
        <label for="password">Password:</label>
        <input type="password" id="password" name="account_password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"required>
        <button type="submit">Login</button>
    </form>

    <p>Don't have an account? <a href="/account/register">Register here</a></p>

    <p class="password-requirements">
        Password must be at least 12 characters long and contain:
        <br>
        - At least 1 capital letter
        <br>
        - At least 1 number
        <br>
        - At least 1 special character
    </p>
